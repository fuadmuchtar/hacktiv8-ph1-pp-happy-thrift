<%- include('_header') %>

<h1>List Stores</h1>

<table class="table">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Description</th>
        <th scope="col">Join Date</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% data.forEach((el,index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= el.name %></td>
              <td><%= el.address %></td>
              <td><%= el.description %></td>
              <td>2025 / static</td>
              <td>
                <a href="/stores/<%= el.id %>/delete" class="btn btn-danger">Delete</a>
              </td>
            </tr>
         
        <% }) %>
    </tbody>
  </table>

<%- include('_footer') %>