<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Happy Thrift</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
    </head>
    <body class="bg-light">
        <%- include("_navBar") %>

        <!-- Hero Section -->
        <div class="bg-dark text-white py-4">
            <div class="container text-center">
                <h1 class="display-5 mb-2">Welcome to Happy Thrift!</h1>
                <p class="lead">
                    Discover unique second-hand treasures at amazing prices.
                </p>
            </div>
        </div>

        <!-- Products Section -->
        <div class="container py-4">
            <h3 class="mb-4">
                <i class="fas fa-fire text-danger"></i> Hot Items
            </h3>

            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                <!-- Item Card -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img
                            src="https://via.placeholder.com/300x300"
                            class="card-img-top"
                            alt="Item Image"
                        />
                        <div class="card-body">
                            <h6 class="card-title">Vintage Denim Jacket</h6>
                            <p class="text-danger mb-1">Rp 185.000</p>
                            <span class="badge bg-dark">Size L</span>
                        </div>
                        <div class="card-footer bg-white">
                            <button class="btn btn-dark btn-sm w-100">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Add more cards as needed -->
            </div>

            <!-- Features -->
            <div class="row text-center mt-5">
                <div class="col-md-4">
                    <i class="fas fa-truck fs-3 text-dark"></i>
                    <h6 class="mt-2">Free Shipping</h6>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-shield-alt fs-3 text-dark"></i>
                    <h6 class="mt-2">Secure Payment</h6>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-undo fs-3 text-dark"></i>
                    <h6 class="mt-2">Easy Returns</h6>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
