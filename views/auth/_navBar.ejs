<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Happy Thrift</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Font Awesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
    </head>
    <body class="bg-light">
        <!-- Navbar -->
        <nav
            class="navbar navbar-expand-lg bg-white border-bottom shadow-sm sticky-top"
        >
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold fs-4 text-dark" href="/"
                    >Happy Thrift</a
                >

                <!-- Toggle Button -->
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarContent"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Categories Dropdown -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a
                                class="nav-link dropdown-toggle text-dark"
                                href="#"
                                role="button"
                                data-bs-toggle="dropdown"
                            >
                                Categories
                            </a>
                            <ul class="dropdown-menu shadow-sm">
                                <li>
                                    <a
                                        class="dropdown-item"
                                        href="/category/clothes"
                                        >Clothes</a
                                    >
                                </li>
                                <li>
                                    <a
                                        class="dropdown-item"
                                        href="/category/pants"
                                        >Pants</a
                                    >
                                </li>
                                <li>
                                    <a
                                        class="dropdown-item"
                                        href="/category/accessories"
                                        >Accessories</a
                                    >
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Search Form -->
                    <form class="d-flex me-3" role="search">
                        <div class="input-group">
                            <input
                                type="search"
                                class="form-control"
                                placeholder="Search items..."
                                aria-label="Search"
                            />
                            <button class="btn btn-dark" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Navigation Links -->
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/add-item">
                                <i class="fas fa-plus-circle me-1"></i> Add Item
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/profile">
                                <i class="fas fa-user me-1"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/cart">
                                <i class="fas fa-shopping-cart me-1"></i> Cart
                            </a>
                        </li>

                        <!-- Auth Buttons -->
                        <li class="nav-item ms-2">
                            <a class="btn btn-outline-dark" href="/login">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-dark" href="/register">
                                <i class="fas fa-user-plus me-1"></i> Register
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-danger" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
